#!/usr/bin/make -f

# Uncomment this to turn on verbose mode.
# export DH_VERBOSE=1

%:
	dh "$@"

override_dh_auto_build:
	dh_auto_build
	npm cache clean
	cat /etc/resolv.conf
	ls -l /lib/x86_64-linux-gnu/libnss_dns.so.2
	ls -l /lib/x86_64-linux-gnu/libnss_files.so.2
	wget https://npm-registry.sipwise.com/eventsource-polyfill/-/eventsource-polyfill-0.9.6.tgz
	npm install -loglevel verbose
	npm run build
