
@import 'quasar.variables'

.margin-xs
    margin 8px

.margin-sm
    margin 16px

@media (max-width: $breakpoint-sm)
    .page.csc-list-page
        padding 0
        padding-top 16px

    .page.csc-simple-page
        padding 36px

.csc-no-entities
    margin 15px
    color $secondary

.csc-important
    font-weight bold

.csc-entity
    position relative

    .csc-entity-title {
        color $tertiary
        font-size 18px
        font-weight 400
        letter-spacing normal
        line-height 1.8rem
    }

    .q-btn
        .on-left
            margin-right 0

    .csc-entity-title .q-chip-main {
        color white
    }

    .csc-entity-title-text
        padding-left 6px

    .q-card-title
        color $secondary

    .q-card-title-extra
        .q-btn
            padding-left 8px
            padding-right 8px
