// to the themes belong in either the app.ios.styl or app.mat.styl files.

// App Shared Color Variables
// --------------------------------------------------
// It's highly recommended to change the default colors
// to match your app's branding.

$primary   = #40cc3d
$secondary = #3b3440
$tertiary  = #6e747f

$neutral   = #E0E1E2
$positive  = $primary
$negative  = #de2a2a
$info      = #38c7ce
$warning   = #ffcc24
$faded     = #999999
$dark      = #151d30
$white     = #ffffff
$light     = #cccccc

$main-menu-background = $secondary
$main-menu-title-color = $light
$main-menu-title-hover-color = $light
$main-menu-subtitle-color = $tertiary
$main-menu-subtitle-hover-color = $light
$main-menu-hover-color = $tertiary

$csc-label = rgba(0,0,0,0.46)

$toolbar-background = $primary
$toolbar-min-height = 60px

$layout-header-shadow = $no-shadow
$layout-aside-background = $secondary
$layout-aside-shadow = $no-shadow
$layout-aside-left-width = 260px
$layout-aside-right-width = 320px
$layout-footer-shadow = $no-shadow

$tooltip-background = $primary

$csc-subtitle-font-size = 18px
$csc-subtitle-line-height = 2rem

$item-base-color = $primary
$item-highlight-color = alpha($item-base-color, 15%)

$typography-font-family = 'Muli', '-apple-system', 'Helvetica Neue', Helvetica, Arial, sans-serif
